<h2>TinyApp</h2>


  <% if (user) { %>
    <p> Logged in as: <%= user %> </p>

    <form method="POST" action="/logout">
    <button type="submit">Logout</button>
    </form>
  <% } else { %>
    <form method="POST" action="/login">
      <input name="username" type="text" placeholder="Username">
      <button type="submit">Submit</button>
    </form>
<% } %>


